<%= form_tag :searchs, :method => :get do %>
  <p>
    <%= text_field_tag :address, params[:address], placeholder: '住所を入力してください' %>
    <%= text_field_tag :distance, params[:distance], placeholder: '距離(m)を入力してください' %>
    <%= text_field_tag :limit, params[:limit], placeholder: '件数を入力してください' %>
    <%= submit_tag "SENT", :name => nil %>
<% end %>

<%= link_to 'search', searchs_path %>











